// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Menu {
  idMenu    Int      @id @default(autoincrement())
  namaMenu  String
  harga     Int
  image     String
  description   String

}


model TakeAway {
  idTransaksi     Int      @id @default(autoincrement())
  namPemesan      String
  noHp            String
  tanggal         DateTime   @default(now())
  totalHarga      Int 
  
}

model Dinein {
  idTransaksi     Int      @id @default(autoincrement())
  namPemesan      String
  noHp            String
  noMeja          String
  
}